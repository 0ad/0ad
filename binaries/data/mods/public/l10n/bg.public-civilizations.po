msgid "Xsayarsa I"
msgstr "Ксаярса I"

#: simulation/data/civs/pers.jsonAINames[5]
msgid "Artaxshacha I"
msgstr "Артаксшача I"

#: simulation/data/civs/pers.jsonAINames[6]
msgid "Darayavahush II"
