						closeMenu();
						<![CDATA[
							var btCaptions = ["Yes", "No"];
							var btCode = [exit, null];
							messageBox(400, 200, "Are you sure you want to quit 0 A.D.?", "Confirmation", 0, btCaptions, btCode);
