				hidden="true"
			>
				<object name="submenuOptionsButton"
					style="StoneButtonFancy"
					type="button"
					size="0 0 100% 28"
					tooltip_style="pgToolTip"
					tooltip="Adjust game settings. [NOT YET IMPLEMENTED]"
