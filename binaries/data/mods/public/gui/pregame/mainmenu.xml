						closeMenu();
						<![CDATA[
							// Start Atlas
							if (Engine.AtlasIsAvailable())
							Engine.RestartInAtlas();
							else
							messageBox(400, 200, "The scenario editor is not available or failed to load.", "Error", 2);
						]]>
					</action>
				</object>
