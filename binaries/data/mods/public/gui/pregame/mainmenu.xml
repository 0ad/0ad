					Matches
					<action on="Press">
						closeMenu();
						Engine.PushGuiPage("page_gamesetup.xml", { type: "offline" });
					</action>
				</object>

				<object name="subMenuCampaignButton"
					type="button"
					style="StoneButtonFancy"
					size="0 32 100% 60"
					tooltip_style="pgToolTip"
