		<style 	name="wheatTextHeadBlack"
			ghost="true"
			font="tahoma16"
			textcolor="black"
		/>

		<style 	name="wheatTextHeadWhite"
			ghost="true"
			font="tahoma16"
			textcolor="white"
		/>

		<style 	name="wheatTextHeadBlackRt"
