<?xml version="1.0" encoding="utf-8"?>

<objects>
	<script file="gui/common/music.js"/>
	<script file="gui/common/functions_global_object.js"/>
	<script file="gui/common/functions_utility_error.js"/>
	<script file="gui/common/settings.js"/>

	<script file="gui/campaign/campaign.js"/>
	<script file="gui/campaign/campaign_io.js"/>
	<script file="gui/campaign/gamesetup/gamesetup.js"/>

	<script file="gui/campaign/simple_campaign/mainmenu.js"/>

	<object type="image" style="ModernWindow" size="0 0 100% 100%" name="campaignMenuWindow">

		<!-- Title -->
		<object style="ModernLabelText" name="CampaignTitle" type="text" size="50%-128 4 50%+128 36">
			<translatableAttribute id="caption">Campaign Name</translatableAttribute>
		</object>

		<object name="leftPanel" size="30 50 100%-447 100%-340">
			<!-- List of available levels -->
			<object name="levelSelection"
				size="0 0 100% 100%"
				style="ModernList"
				type="olist"
				font="sans-stroke-16"
				>

				<action on="SelectionChange">displayLevelDetails();</action>
				<!--<action on="SelectionColumnChange">displayReplayList();</action>
				<action on="mouseleftdoubleclickitem">startCampaign();</action>-->

			<!-- Columns -->
			<column id="name" color="172 172 212" width="80%">
				<translatableAttribute id="heading" context="campaignLevelList">Scenario Name</translatableAttribute>
			</column>

			<column id="status" color="192 192 192" width="20%">
				<translatableAttribute id="heading" context="campaignLevelList">Status</translatableAttribute>
			</column>
			</object>
		</object>

		<object name="rightPanel" size="100%-432 50 100%-30 100%-340">
			<!-- Scenario Image -->
			<object type="image" sprite="ModernDarkBoxGold" name="levelPreviewBox" size="0 0 100% 302">
				<object type="image" sprite="snLevelPreview" size="1 1 100%-1 301" name="mapPreview"/>
			</object>

			<!-- Name and description -->
			<!-- TODO: figure out if we want an options button here too. -->
			<object size="0 315 100% 100%">
				<object name="scenarioName" type="text" style="ScenarioNameText" size="0 0 100% 30">
					<translatableAttribute id="caption">No scenario selected</translatableAttribute>
				</object>
				<object type="image" sprite="ModernDarkBoxGold" size="0 30 100% 100%">
					<object name="scenarioDesc" type="text" style="ModernText" size="10 10 100%-10 100%-10"/>
				</object>
			</object>

		</object>

		<object name="savePanel" size="30 100%-330 100%-30 100%-85">
			
			<object style="ModernLabelText" type="text" size="50%-128 4 50%+128 36">
				<translatableAttribute id="caption">Saved Games</translatableAttribute>
			</object>

			<object name="saveSelection"
				size="0 45 100% 100%"
				style="ModernList"
				type="olist"
				font="sans-stroke-13"
				>

				<!--<action on="SelectionChange">displayScenarioDetails();</action>
				<action on="SelectionColumnChange">displayReplayList();</action>
				<action on="mouseleftdoubleclickitem">startCampaign();</action>-->

			<!-- Columns -->
			<column id="name" color="172 172 212" width="100%">
				<translatableAttribute id="heading" context="campaignsavelist">TODO: have saves here</translatableAttribute>
			</column>
			</object>		
		</object>

		<object name="bottomPanel" size="30 100%-55 100%-5 100%-25" >

			<!-- Exit & Back to Main Menu -->
			<object type="button" style="StoneButton" size="0 0 17% 100%">
				<translatableAttribute id="caption">Back to Main Menu</translatableAttribute>
				<action on="Press">exitCampaignMode()</action>
			</object>

			<object type="button" style="StoneButton" size="17%+20 0 34%+20 100%">
				<translatableAttribute id="caption">Exit Game</translatableAttribute>
				<action on="Press">exitCampaignMode(true);</action>
			</object>

			<object name="startButton" type="button" style="StoneButtonFancy" size="83%-25 0 100%-25 100%" enabled="false">
				<translatableAttribute id="caption">Start Scenario</translatableAttribute>
				<action on="Press">
					startLevel(g_SelectedLevel);
				</action>
			</object>

		</object>
	</object>

</objects>
