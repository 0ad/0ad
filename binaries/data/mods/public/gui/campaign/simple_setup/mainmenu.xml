<?xml version="1.0" encoding="utf-8"?>

<objects>
	<script file="gui/common/music.js"/>
	<script file="gui/common/functions_global_object.js"/>
	<script file="gui/common/functions_utility_error.js"/>
	<script file="gui/common/settings.js"/>

	<script file="gui/modmod/modutils.js"/>

	<script file="gui/campaignsetup/campaign_utils.js"/>
	<script file="gui/campaign/mainmenu.js"/>
	<script file="gui/campaign/gamesetup.js"/>
	<script file="gui/campaign/utilities.js"/>

	<object type="image" style="ModernWindow" size="0 0 100% 100%" name="campaignMenuWindow">

		<!-- Title -->
		<object style="ModernLabelText" type="text" size="50%-128 4 50%+128 36">
			<translatableAttribute id="caption">Test Campaign</translatableAttribute>
		</object>

		<object name="leftPanel" size="3% 5% 100%-500 100%-80">
			<!-- List of available scenarios -->
			<object name="scenarioSelection"
				size="0 35 100% 100%"
				style="ModernList"
				type="olist"
				font="sans-stroke-16"
				>

				<action on="SelectionChange">displayScenarioDetails();</action>
				<!--<action on="SelectionColumnChange">displayReplayList();</action>
				<action on="mouseleftdoubleclickitem">startCampaign();</action>-->

			<!-- Columns -->
			<column id="ID" color="172 172 212" width="5%">
				<translatableAttribute id="heading" context="campaignscenariolist">ID</translatableAttribute>
			</column>

			<column id="name" color="172 172 212" width="80%">
				<translatableAttribute id="heading" context="campaignscenariolist">Scenario Name</translatableAttribute>
			</column>

			<column id="status" color="192 192 192" width="15%">
				<translatableAttribute id="heading" context="campaignscenariolist">Status</translatableAttribute>
			</column>
			</object>
		</object>

		<object name="rightPanel" size="100%-496 5% 97% 100%-80">
			<!-- Scenario Image -->
			<object type="image" sprite="ModernDarkBoxGold" name="scenarioPreviewBox" size="5 5 100%-5 305">
				<object type="image" sprite="snScenarioPreview" size="1 1 401 294" name="mapPreview"/>
			</object>

			<!-- Name and description -->
			<!-- TODO: sort this all out. -->
			<object size="5 315 100%-5 100%-10">
				<object name="scenarioName" type="text" style="ModernLeftLabelText" size="0 0 100%-120 30"/>
				<object type="image" sprite="ModernDarkBoxGold" size="0 30 100% 100%">
					<object name="scenarioDescription" type="text" style="ModernText" size="0 0 100% 100%"/>
				</object>
			</object>

		</object>

		<object name="bottomPanel" size="25 100%-55 100%-5 100%-25" >

			<!-- Exit & Back to Main Menu -->
			<object type="button" style="StoneButton" size="25 0 17%+25 100%">
				<translatableAttribute id="caption">Exit Game</translatableAttribute>
				<action on="Press">exitCampaignMode(true);</action>
			</object>

			<object type="button" style="StoneButton" size="20%+25 0 37%+25 100%">
				<translatableAttribute id="caption">Back to Main Menu</translatableAttribute>
				<action on="Press">exitCampaignMode()</action>
			</object>

			<!-- Start Campaign Button -->
			<object name="startCampButton" type="button" style="StoneButton" size="83%-25 0 100%-25 100%" enabled="false">
				<translatableAttribute id="caption">Start Campaign</translatableAttribute>
				<action on="Press">
					launchGame(g_SelectedScenario);
				</action>
			</object>

		</object>
	</object>

</objects>
