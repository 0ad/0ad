<?xml version="1.0" encoding="utf-8"?>
<effect>

	<technique>
		<require context="PASS_REFLECTIONS"/>
		<require shaders="arb"/>
		<pass shader="arb/terrain_decal">
			<depth mask="false"/>
			<cull mode="FRONT"/>
		</pass>
	</technique>

	<technique>
		<require context="PASS_REFLECTIONS"/>
		<require shaders="glsl"/>
		<pass shader="glsl/terrain_decal">
			<depth mask="false"/>
			<cull mode="FRONT"/>
		</pass>
	</technique>

	<technique>
		<require shaders="arb"/>
		<pass shader="arb/terrain_decal">
			<depth mask="false"/>
		</pass>
	</technique>

	<technique>
		<require shaders="glsl"/>
		<pass shader="glsl/terrain_decal">
			<depth mask="false"/>
		</pass>
	</technique>

</effect>
