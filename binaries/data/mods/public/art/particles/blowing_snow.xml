<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/blowing_snow.png</texture>
    <blend mode="over"/>

    <start_full/>

    <constant name="emissionrate" value="0.2"/>
    <uniform name="lifetime" min="15.0" max="25.0"/>

	<uniform name="position.x" min="-20.0" max="20.0"/>
    <uniform name="position.z" min="-10.0" max="10.0"/>
    <constant name="position.y" value="0.0"/>

    <uniform name="velocity.x" min="1.0" max="2.0"/>
    <uniform name="velocity.angle" min="-0.1" max="0.15"/>
    <uniform name="size" min="20.0" max="40.0"/>

</particles>
