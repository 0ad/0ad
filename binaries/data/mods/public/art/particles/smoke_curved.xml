<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/smoke_curved.png</texture>
    <blend mode="over"/>

    <use_relative_velocity/>

    <constant name="emissionrate" value="13.0"/>
    <uniform name="lifetime" min="10.0" max="12.0"/>

    <constant name="position.y" value="0"/>

    <uniform name="angle" min="-3.14" max="3.14"/>

    <uniform name="velocity.x" min="-0.5" max="0.5"/>
    <uniform name="velocity.y" min="-0.5" max="0.5"/>
    <uniform name="velocity.z" min="1.5" max="2.0"/>
    <uniform name="velocity.angle" min="-2.0" max="2.0"/>

    <uniform name="size" min="1.5" max="2.5"/>
	<force y="1.5"/>

    <uniform name="color.r" min="1.0" max="1.0"/>
    <copy name="color.g" from="color.r"/>
    <copy name="color.b" from="color.r"/>

</particles>
